<UserControl x:Class="launcher.Popup_Start_Tour"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:launcher"
             mc:Ignorable="d"
             d:DesignHeight="210" d:DesignWidth="561">

    <Border Background="{DynamicResource ThemePrimary}" CornerRadius="10">
        <Grid>
            <Border Background="{DynamicResource ThemeSecondaryAlt}" Height="55" VerticalAlignment="Top"  CornerRadius="10, 10, 0, 0">
                <Grid>
                    <TextBlock Text="Welcome To The New Launcher!" Foreground="{DynamicResource ThemePrimaryText}" FontSize="24" FontFamily="{StaticResource SansationBold}" VerticalAlignment="Center" Margin="15,0,164,0" />
                </Grid>
            </Border>
            <TextBlock Text="The R5R launcher has gone through a massive redesign! We have prepared a little tour to show you around." Foreground="{DynamicResource ThemeSecondaryText}" FontSize="16" FontFamily="{StaticResource SansationLight}" VerticalAlignment="Top" TextWrapping="Wrap" Margin="19,78,19,0" />
            <Border Height="55" VerticalAlignment="Bottom">
                <Grid>
                    <Button x:Name="Start" Style="{DynamicResource checkBtnStyle}" Margin="431,0,10,0" Content="START TOUR" Background="{DynamicResource ThemeSecondaryAltText}" BorderBrush="{DynamicResource ThemeSecondaryAltText}" FontSize="18" FontFamily="{StaticResource SansationBold}" VerticalAlignment="Center" Cursor="Hand" Foreground="{DynamicResource ThemePrimaryAltText}" Height="42" Click="Start_Click" />
                    <Button x:Name="Skip" Style="{DynamicResource closeBtnStyle}" Margin="331,0,135,0" Content="SKIP" Background="Transparent" BorderBrush="Transparent" FontSize="18" FontFamily="{StaticResource SansationBold}" VerticalAlignment="Center" Cursor="Hand" Height="42" Foreground="{DynamicResource ThemeSecondaryAltText}" Click="Skip_Click" />
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>