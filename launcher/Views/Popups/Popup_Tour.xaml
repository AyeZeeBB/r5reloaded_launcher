<UserControl x:Class="launcher.Popup_Tour"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:launcher"
             mc:Ignorable="d"
             d:DesignHeight="160" d:DesignWidth="480">

    <Border Background="{DynamicResource ThemePrimary}" CornerRadius="10" Height="160" Width="480">
        <Grid>
            <TextBlock x:Name="Title" Text="Title" Foreground="{DynamicResource ThemePrimaryText}" FontSize="18" FontFamily="{StaticResource SansationBold}" VerticalAlignment="Top" TextWrapping="Wrap" Margin="10,10,60,0" />
            <TextBlock x:Name="Desc" Text="Desc" Foreground="{DynamicResource ThemeSecondaryText}" FontSize="16" FontFamily="{StaticResource SansationLight}" VerticalAlignment="Top" TextWrapping="Wrap" Margin="7,37,23,0" />
            <Button x:Name="Next" Style="{DynamicResource checkBtnStyle}" Margin="389,108,10,0" Content="NEXT" Background="{DynamicResource ThemeSecondaryAltText}" BorderBrush="{DynamicResource ThemeSecondaryAltText}" FontSize="18" FontFamily="{StaticResource SansationBold}" VerticalAlignment="Top" Cursor="Hand" Foreground="{DynamicResource ThemePrimaryAltText}" Height="42" Click="Next_Click" />
            <Button x:Name="Skip" Style="{DynamicResource closeBtnStyle}" Margin="304,108,97,0" Content="SKIP" Background="Transparent" BorderBrush="Transparent" FontSize="18" FontFamily="{StaticResource SansationBold}" VerticalAlignment="Top" Cursor="Hand" Height="42" Foreground="{DynamicResource ThemeSecondaryAltText}" Click="Skip_Click" />
            <TextBlock x:Name="Page" Text="1 of #" Foreground="{DynamicResource ThemeSecondaryText}" FontSize="16" FontFamily="{StaticResource SansationLight}" VerticalAlignment="Top" TextWrapping="Wrap" Margin="10,132,358,0" />
        </Grid>
    </Border>
</UserControl>