<UserControl x:Class="launcher.ModLibrarySettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:launcher"
             mc:Ignorable="d" 
             d:DesignHeight="704" d:DesignWidth="935">
    <Border Background="{DynamicResource ThemeSecondary}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="121" />
                <RowDefinition Height="600" />
            </Grid.RowDefinitions>
            <TextBlock Text="My Mods" Foreground="{DynamicResource ThemePrimaryText}" FontSize="40" FontFamily="{StaticResource SansationBold}" FontWeight="Bold"  VerticalAlignment="Center" Margin="43,0,0,0" Height="49" />
            <!--<Button Visibility="Visible" x:Name="UpdateAllButton" Style="{DynamicResource checkBtnStyle}" Content="UPDATE ALL" Background="{DynamicResource ThemeSecondaryAltText}" BorderBrush="{DynamicResource ThemeSecondaryAltText}" FontSize="24" FontFamily="{StaticResource SansationBold}" VerticalAlignment="Center" Cursor="Hand" Foreground="{DynamicResource ThemePrimaryAltText}" Height="50" Click="UpdateAllButton_Click" Margin="0,0,60,0" HorizontalAlignment="Right" FontWeight="Bold" Width="170" />-->
            <!--<local:LibraryModItem HorizontalAlignment="Center" Margin="0,39,0,0" Grid.Row="1" VerticalAlignment="Top" Loaded="LibraryModItem_Loaded"/>-->
            <Rectangle Grid.Row="1" Fill="{DynamicResource ThemeSeperator}" Margin="45,0,45,0" Height="3" VerticalAlignment="Top" />
            <ScrollViewer VerticalScrollBarVisibility="Hidden" Grid.Row="1" Margin="0,30,0,0">
                <StackPanel x:Name="ModsPanel" Margin="0,0,0,30" />
            </ScrollViewer>
        </Grid>
    </Border>
</UserControl>
