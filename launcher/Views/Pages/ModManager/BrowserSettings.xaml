<UserControl x:Class="launcher.BrowserSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:launcher"
             mc:Ignorable="d" 
             d:DesignHeight="704" d:DesignWidth="935">
    <Border Background="{DynamicResource ThemeSecondary}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="121" />
                <RowDefinition Height="600" />
            </Grid.RowDefinitions>
            <TextBlock Text="Browser" Foreground="{DynamicResource ThemePrimaryText}" FontSize="40" FontFamily="{StaticResource SansationBold}" FontWeight="Bold"  VerticalAlignment="Center" Margin="43,0,0,0" Height="49" />
            <!--<local:BrowserModItem HorizontalAlignment="Center" Margin="0,15,0,0" Grid.Row="1" VerticalAlignment="Top" />-->
            <Rectangle Grid.Row="1" Fill="{DynamicResource ThemeSeperator}" Margin="45,0,45,0" Height="3" VerticalAlignment="Top" />
            <ScrollViewer VerticalScrollBarVisibility="Hidden" Grid.Row="1" Margin="0,20,0,0">
                <StackPanel x:Name="OnlineModsPanel" Margin="0,0,0,30" />
            </ScrollViewer>
        </Grid>
    </Border>
</UserControl>
