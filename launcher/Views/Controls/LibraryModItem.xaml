<UserControl x:Class="launcher.LibraryModItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:launcher"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="800" Margin="0,0,0,12">
    <Border x:Name="ModItemBorder" Background="{DynamicResource ThemePrimary}"  BorderThickness="2" Height="150" Width="800" CornerRadius="15">
        <Grid>
            <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" ClipToBounds="True">
                <!-- Clip the image to a rectangle with rounded corners only on the right side -->
                <Grid.Clip>
                    <RectangleGeometry Rect="0,0,400,146" RadiusX="14" RadiusY="14">
                        <RectangleGeometry.Transform>
                            <TranslateTransform X="0" Y="0" />
                        </RectangleGeometry.Transform>
                    </RectangleGeometry>
                </Grid.Clip>
                <Image x:Name="FeatImage" Source="/assets/icon.png"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Stretch"
                       Stretch="UniformToFill" />
                <!--<Grid Visibility="Visible" x:Name="BlueOverlay" Background="{DynamicResource ThemePrimary}" Opacity="0.85"></Grid>
                <TextBlock Visibility="Visible" x:Name="NewVersionText" Text="1.0.2" Foreground="{DynamicResource ThemePrimaryText}" FontFamily="{StaticResource SansationRegular}" FontSize="20" TextWrapping="Wrap" VerticalAlignment="Top" Margin="0,15,0,0" Grid.Column="0" HorizontalAlignment="Center" FontWeight="Bold" />
                <Button Visibility="Visible" x:Name="ProceedUpdateBtn" Style="{DynamicResource checkBtnStyle}" Content="UPDATE" Background="{DynamicResource ThemeSecondaryAltText}" BorderBrush="{DynamicResource ThemeSecondaryAltText}" FontSize="18" FontFamily="{StaticResource SansationBold}" VerticalAlignment="Bottom" Cursor="Hand" Foreground="{DynamicResource ThemePrimaryAltText}" Height="40" Click="ProceedUpdateButton_Click" Margin="20,0,20,58" />
                <Button Visibility="Visible" x:Name="CancelUpdateBtn" Style="{DynamicResource closeBtnStyle}" Margin="20,48,20,10" Content="CANCEL" Background="Transparent" BorderBrush="Transparent" FontSize="18" FontFamily="{StaticResource SansationBold}" VerticalAlignment="Bottom" Cursor="Hand" Height="40" Foreground="{DynamicResource ThemePrimaryText}" Click="CancelUpdateButton_Click" />-->
            </Grid>
            <Grid Grid.Column="1" Margin="0,15,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="45" />
                    <RowDefinition Height="20" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <TextBlock x:Name="Id" Text="test_name" Visibility="Hidden" Foreground="{DynamicResource ThemePrimaryText}" FontFamily="{StaticResource SansationRegular}" FontSize="20" TextWrapping="Wrap" VerticalAlignment="Stretch" Margin="30,15,15,0" Grid.Column="0" />
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock x:Name="Name" Text="Test name" Foreground="{DynamicResource ThemePrimaryText}" FontFamily="{StaticResource SansationRegular}" FontSize="20" TextWrapping="Wrap" Margin="30,0,0,0" Grid.Column="0" VerticalAlignment="Center" />
                    <TextBlock x:Name="Version" Text="1.0.1" Foreground="{DynamicResource ThemeDisabledText}" FontFamily="{DynamicResource SansationRegular}" FontSize="20" TextWrapping="Wrap" Margin="8,0,15,0" VerticalAlignment="Bottom"  />
                </StackPanel>
                <TextBlock x:Name="Author" Text="CafeFPS" Foreground="{DynamicResource ThemePrimaryText}" FontFamily="{StaticResource SansationLight}" TextWrapping="Wrap" Margin="30,-4,15,0" Grid.Row="1" VerticalAlignment="Top" />
                <TextBlock x:Name="Description" Text="the mod" Foreground="{DynamicResource ThemeSecondaryText}" FontFamily="{StaticResource SansationLight}" FontSize="14" TextWrapping="Wrap" Margin="30,10,120,0" Grid.Row="2" VerticalAlignment="Top" />
            </Grid>
            <CheckBox x:Name="EnabledCheckbox" Style="{StaticResource SwitchStyle}" Height="27" Width="50" Cursor="Hand" HorizontalAlignment="Right" Grid.Column="1" Margin="0,0,30,0" Click="IsEnabled_Clicked" />
        </Grid>
            <ProgressBar x:Name="DownloadProgress" Visibility="Hidden" Style="{StaticResource installProgress}" Value="50" Maximum="100" Height="16" Margin="80,0,80,0" Foreground="{DynamicResource ThemeSecondaryAltText}" BorderBrush="{DynamicResource ThemePrimary}" Background="{DynamicResource ThemePrimary}" HorizontalAlignment="Stretch" />
        </Grid>
    </Border>
</UserControl>
