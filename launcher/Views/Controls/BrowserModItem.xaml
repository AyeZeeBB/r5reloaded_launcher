<UserControl x:Class="launcher.BrowserModItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:launcher"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="800" Margin="0,0,0,10">
    <Border x:Name="ModItemBorder" Background="{DynamicResource ThemePrimary}"  BorderThickness="2" Height="80" Width="800" CornerRadius="15">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="145" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" ClipToBounds="True">
                <!-- Clip the image to a rectangle with rounded corners only on the right side -->
                <Grid.Clip>
                    <RectangleGeometry Rect="0,0,400,76" RadiusX="14" RadiusY="14">
                        <RectangleGeometry.Transform>
                            <TranslateTransform X="0" Y="0" />
                        </RectangleGeometry.Transform>
                    </RectangleGeometry>
                </Grid.Clip>
                <Image x:Name="FeatImage" Source="/assets/icon.png"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Stretch"
                       Stretch="UniformToFill" />
            </Grid>
            <Grid Grid.Column="1" MaxWidth="250" Margin="20,0,0,0" HorizontalAlignment="Left">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Margin="0,15,0,0" MaxHeight="24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="Name" Text="Test name" Foreground="{DynamicResource ThemePrimaryText}" FontFamily="{StaticResource SansationRegular}" FontSize="16" MaxWidth="180" HorizontalAlignment="Left" VerticalAlignment="Top" />
                    <TextBlock x:Name="Version" Text="1.0.1" Foreground="{DynamicResource ThemeDisabledText}" FontFamily="{DynamicResource SansationRegular}" FontSize="16" Margin="8,0,0,0" Grid.Column="1" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top"  />
                </Grid>
                <TextBlock Grid.Row="1" x:Name="Author" Text="CafeFPS" Foreground="{DynamicResource ThemePrimaryText}" FontFamily="{StaticResource SansationLight}" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Left" />

            </Grid>
            <TextBlock Grid.Column="2" x:Name="Description" Text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Etiam placerat, felis in lobortis hendrerit, lorem ante tincidunt velit." Foreground="{DynamicResource ThemeSecondaryText}" FontFamily="{StaticResource SansationLight}" FontSize="14" TextWrapping="Wrap" Grid.Row="2" VerticalAlignment="Center" MinWidth="300" HorizontalAlignment="Left" Margin="10,0,0,0" />
            <Grid Grid.Column="3" HorizontalAlignment="Right">
                <Button x:Name="DownloadMod" Style="{DynamicResource SettingsBtnStyle}" Width="105" Height="35" Content="DOWNLOAD" Background="{DynamicResource ThemeSecondaryAltText}" BorderBrush="{DynamicResource ThemeSecondaryAltText}" FontFamily="{StaticResource SansationBold}" Cursor="Hand" VerticalAlignment="Center" Click="DownloadMod_Click" Grid.Column="1" HorizontalAlignment="Right" FontWeight="Bold" FontSize="14" Margin="0,0,20,0" />
                <ProgressBar Visibility="Hidden" x:Name="DownloadProgress" Style="{StaticResource installProgress}" Value="0" Maximum="100" Height="15" Margin="0,0,30,0" Foreground="{DynamicResource ThemeSecondaryAltText}" BorderBrush="{DynamicResource ThemePrimary}" Background="{DynamicResource ThemePrimary}" HorizontalAlignment="Right" Grid.Column="1" VerticalAlignment="Center" Width="105" />
                <TextBlock Visibility="Hidden" x:Name="InLibraryText" Text="IN LIBRARY" Foreground="{DynamicResource ThemeSecondaryAltText}" FontFamily="{DynamicResource SansationBold}" FontSize="16" FontWeight="Bold" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Left" Width="105" Margin="10,0,20,0" />
            </Grid>
        </Grid>
    </Border>
</UserControl>
