<UserControl x:Class="launcher.DownloadItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:launcher"
             mc:Ignorable="d"
             d:DesignHeight="34" d:DesignWidth="547">

    <Border Background="Transparent" BorderThickness="0" Height="34">
        <Grid>
            <ProgressBar x:Name="downloadFileProgress" Style="{StaticResource installProgress}" Value="50" Maximum="100" Foreground="{DynamicResource ThemeSecondaryAltText}" BorderBrush="{DynamicResource ThemePrimary}" Background="{DynamicResource ThemePrimary}" Margin="0,2,0,2" />
            <TextBlock x:Name="downloadFileName" Text="File Name Here" Foreground="{DynamicResource ThemePrimaryText}" FontSize="14" FontFamily="{StaticResource SansationLight}" Margin="6,0,135,0" Height="16" VerticalAlignment="Center" />
            <TextBlock x:Name="downloadFilePercent" Text="waiting..." Foreground="{DynamicResource ThemePrimaryText}" FontFamily="{StaticResource SansationLight}" Margin="412,0,5,0" Height="15" Width="535" TextAlignment="Right" VerticalAlignment="Center" HorizontalAlignment="Right" />
        </Grid>
    </Border>
</UserControl>